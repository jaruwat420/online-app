<!--================Single Product Area =================-->
<div class="product_image_area">
	<div class="container">
		<div class="row s_product_inner">
			{{#each categoriesData}}

			<div class="col-lg-6">
				<div class="s_Product_carousel">
					<div class="single-prd-item">
						<img class="img-fluid mt-2" src="/uploads/{{this.image}}" alt="">
					</div>
					<div class="single-prd-item">
						<img class="img-fluid  mt-2" src="/uploads/{{this.image}}" alt="">
					</div>
					<div class="single-prd-item">
						<img class="img-fluid  mt-2" src="/uploads/{{this.image}}" alt="">
					</div>
				</div>
			</div>
			{{/each}}
			{{#each categoriesData}}

			<div class="col-lg-5 offset-lg-1">
				<div class="s_product_text">
					<h3>{{this.name}}</h3>
					<h2>${{this.price}}</h2>
					<ul class="list">
						<li><a class="active" href="#"><span>ประเภทสินค้า</span> : {{this.category}}</a></li>
						<li><a id="qtyValue" data-qty="{{this.qty}}" href="#"><span>สินค้าในคลัง</span> : {{this.qty}}</a></li>
					</ul>
					<p>{{this.description}}</p>
					<div class="product_count">
						<label for="qty">จำนวน:</label>
						<input type="hidden" id="proId" value="{{this.id}}" />
						<input type="text" name="qty" id="sst" class="toggle-add" maxlength="12" value="1" title="Quantity:"
							class="input-text qty">
						<button class="increase items-count" type="button"><i class="lnr lnr-chevron-up"></i></button>
						<button class="reduced items-count" type="button"><i class="lnr lnr-chevron-down"></i></button>
					</div>
					<div class="card_area d-flex align-items-center">
						<a class="primary-btn" id="btn-add-product">เพิ่มสินค้าลงตะกร้า</a>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>
